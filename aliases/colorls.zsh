# colorls aliases

alias ls='colorls --sd'
alias l='colorls -l --sd'
alias la='colorls -la --sd'
alias lst='colorls --tree --sd'
alias lsd='colorls --group-directories-first'
alias ll='colorls -l --sd --group-directories-first'
alias lr='colorls -r --sd'
alias lg='colorls -l --sd --gs'
alias lss='colorls -l --sd --sort=size'